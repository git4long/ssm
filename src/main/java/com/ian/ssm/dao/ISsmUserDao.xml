<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ian.ssm.dao.ISsmUserDao">

    <insert id="addUser" parameterType="com.ian.ssm.entity.SsmUser" useGeneratedKeys="true"
            keyColumn="cod_id" keyProperty="codId">
        INSERT INTO ssm_user(cod_no, txt_name, cod_sex, dat_birthday)
        VALUES (#{codNo}, #{txtName}, #{codSex}, #{datBirthday});
    </insert>

    <select id="selectUser" parameterType="java.lang.String" resultType="com.ian.ssm.entity.SsmUser">
        SELECT * FROM ssm_user WHERE name = #{name}
    </select>
</mapper>
